.container {
  padding: 20rpx;
}
.container .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  padding: 30rpx 40rpx 30rpx 20rpx;
}
.container .item .left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.container .item .left image {
  width: 250rpx;
  height: 250rpx;
}
.container .item .left .info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  height: 250rpx;
  padding-left: 20rpx;
}
.container .item .left .info .text .text1 {
  font-size: 30rpx;
  font-weight: bold;
}
.container .item .left .info .text .text2 {
  font-size: 24rpx;
  color: #bdbdbd;
  margin-top: 10rpx;
}
.container .item .left .info .price {
  color: #ff557f;
}

