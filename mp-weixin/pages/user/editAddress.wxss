.container {
  height: calc(100vh - 44px);
  background-color: #fff;
}
.container .form-box {
  padding: 30rpx;
}
.container .form-box .row {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 30rpx;
}
.container .form-box .row .title {
  width: 120rpx;
  font-size: 28rpx;
}
.container .form-box .row .input {
  flex: 1;
  font-size: 28rpx;
  height: 70rpx;
  border: 1px solid #F0F0F0;
  padding: 0 20rpx;
}
.container .form-box .row picker {
  flex: 1;
}
.container .form-box .switch-box {
  justify-content: space-between;
}
.container .form-box .btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #009000;
  border-radius: 50rpx;
  color: #fff;
  margin-top: 50rpx;
  font-size: 35rpx;
}
.container .form-box .btn2 {
  margin-top: 30rpx;
  background-color: #e43d33;
}
.container {
  height: 100vh;
}

