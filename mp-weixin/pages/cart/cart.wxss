.container .no-content {
  height: calc(100vh - 95px);
}
.container .scroll-list {
  box-sizing: border-box;
  padding: 0 10rpx;
  height: calc(100vh - 150px);
}
.container .scroll-list .list {
  padding: 20rpx 0 20rpx;
}
.container .scroll-list .list .item {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
}
.container .scroll-list .list .item:last-child {
  margin-bottom: 0;
}
.container .scroll-list .list .item .content {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin-left: 20rpx;
}
.container .scroll-list .list .item .content .img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
}
.container .scroll-list .list .item .content .info {
  width: 440rpx;
  height: 150rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.container .scroll-list .list .item .content .info .name {
  font-size: 30rpx;
  font-weight: bold;
  color: #3a3a3a;
  margin-bottom: 6rpx;
}
.container .scroll-list .list .item .content .info .number-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.container .scroll-list .list .item .content .info .number-box .price {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff557f;
  font-family: '雅黑';
  line-height: 45rpx;
}
.container uni-checkbox .uni-checkbox-input {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
}
.container .wx-scroll-list {
  height: calc(100vh - 100rpx);
}
.container checkbox .wx-checkbox-input {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
}
.container .bot-box {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
}
.container .bot-box .text-box {
  display: flex;
  align-items: center;
}
.container .bot-box .text-box text {
  font-size: 24rpx;
  margin-left: 5rpx;
  color: #acacac;
}
.container .bot-box .r {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.container .bot-box .r .price-box .text1 {
  font-size: 24rpx;
  margin-right: 10rpx;
}
.container .bot-box .r .price-box .text2 {
  font-size: 26rpx;
  font-weight: bold;
  color: #ff557f;
}
.container .bot-box .r .price-box .price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff557f;
  font-family: '雅黑';
}
.container .bot-box .r .btn {
  width: 150rpx;
  height: 75rpx;
  line-height: 75rpx;
  background-color: #009000;
  border-radius: 50rpx;
  color: #fff;
  font-size: 35rpx;
  margin-left: 20rpx;
}

