/* 水平间距 */
.container {
  padding-top: 80rpx;
}
.container .price-box {
  text-align: center;
  padding: 60rpx 0 80rpx;
}
.container .price-box .label {
  font-size: 28rpx;
  color: #999;
}
.container .price-box .price {
  font-size: 50rpx;
  margin-top: 15rpx;
  font-weight: bold;
}
.container .pay-type {
  padding: 0 50rpx;
}
.container .pay-type .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1px solid #d8d8d8;
}
.container .pay-type .item:last-child {
  border: 0;
}
.container .pay-type .item .left {
  display: flex;
  align-items: center;
}
.container .pay-type .item .left image {
  width: 60rpx;
  height: 60rpx;
}
.container .pay-type .item .left .info {
  margin-left: 15rpx;
}
.container .pay-type .item .left .info .name {
  font-size: 32rpx;
  font-weight: bold;
}
.container .pay-type .item .left .info .text {
  font-size: 26rpx;
  color: #999;
  margin-top: 5rpx;
}
.container .bot-box {
  padding: 80rpx 50rpx 0;
}
.container .bot-box .btn {
  background-color: #009000;
  color: #fff;
}

